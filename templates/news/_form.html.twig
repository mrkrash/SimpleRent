{{ form_start(form) }}
<div class="help is-danger">
    {{ form_errors(form) }}
</div>
<div class="columns">
    <div class="column is-four-fifths">
        {{ form_row(form.title) }}
    </div>
    <div class="column is-one-fifth">
        {{ form_row(form.lang) }}
    </div>
</div>
<div class="columns">
    <div class="column is-three-fifths">
        {{ form_row(form.slug) }}
    </div>
    <div class="column is-two-fifths">
        {{ form_row(form.date) }}
    </div>
</div>
{{ form_row(form.content) }}
{{ form_row(form.uploadSlides) }}
{{ form_end(form) }}
