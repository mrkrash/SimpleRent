<form method="post" action="{{ path('app_accessory_delete', {'id': accessory.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ accessory.id) }}">
    <button class="button is-danger">
        <span class="icon-text">
            <span class="icon"><i class="fas fa-trash"></i></span>
            <span><strong>Elimina</strong></span>
        </span>
    </button>
</form>
