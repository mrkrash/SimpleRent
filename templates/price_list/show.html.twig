{% extends 'admin.html.twig' %}

{% block title %}PriceList{% endblock %}

{% block body %}
    <h1>PriceList</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ price_list.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ price_list.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ price_list.price }}</td>
            </tr>
            <tr>
                <th>Price3days</th>
                <td>{{ price_list.price3days }}</td>
            </tr>
            <tr>
                <th>Price7days</th>
                <td>{{ price_list.price7days }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ price_list.createdAt ? price_list.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ price_list.updatedAt ? price_list.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ price_list.deletedAt ? price_list.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_price_list_index') }}">back to list</a>

    <a href="{{ path('app_price_list_edit', {'id': price_list.id}) }}">edit</a>

    {{ include('price_list/_delete_form.html.twig') }}
{% endblock %}
