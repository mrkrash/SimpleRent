{% extends 'base.html.twig' %}

{% block title %}MC Rent Bike Ragusa{% endblock %}

{% block body %}
  <section class="container">
    <h1 class="title is-1">{{ title }}</h1>
    <p class="has-ribbon">
      {% if date is defined %}
        <div class="ribbon is-large is-primary">{{ date|date('d/m/Y') }}</div>
      {% endif %}
      {{ content|raw }}
    </p>
  </section>
  {% if slides is not empty %}
    <section class="section is-large has-carousel" data-controller='carousel'>
      <div class="carousel">
        {% for slide in slides %}
        <div class="item">
          <figure class="image" style="display: flex; justify-content: center; height: 600px;">
            <img src="/images/{{ slide.name }}" alt="MC Rent Bike Ragusa"/>
          </figure>
        </div>
        {% endfor %}
      </div>
      <div class="hero-head"></div>
      <div class="hero-body"></div>
      <div class="hero-foot"></div>
    </section>
    {% include('home/partials/why_section.html.twig') %}
    {% include('home/partials/map.html.twig') %}
  {% endif %}
{% endblock %}