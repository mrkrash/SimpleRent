<div class="card" style="padding: 3rem;">
  <div class="card-image">
    <figure class="image is-4by3">
      <img src="/images/{{ product.image }}" alt="{{ product.name }}" >
    </figure>
  </div>
  <div class="card-content">
    <div class="content has-text-centered">
      <p class="title is-4 pt-4" style="height: 6rem;">{{ product.name }}</p>
      {% if book %}
        <div class="select">
          <select id="size-{{ product.id }}">
            {% for productQty in product.productQty %}
              <option value="{{ productQty.id }}">size: {{ productQty.size.value }}</option>
            {% endfor %}
          </select>
        </div>
      {% endif %}
    </div>
  </div>

  <footer class="card-footer">
    {% if book %}
      <button
          class="button is-success card-footer-item"
          type="button"
          data-action="cart#addProductToCart"
          data-cart-id-param="{{ product.id }}"
      >
          <span class="icon is-small">
              <i class="fas fa-plus"></i>
          </span>
        <span>{{ 'aggiungi' }}</span>
      </button>
    {% else %}
      <div class="has-text-grey-light">
        Seleziona un range di date per vederne la disponibilit√†
      </div>
    {% endif %}
  </footer>
</div>